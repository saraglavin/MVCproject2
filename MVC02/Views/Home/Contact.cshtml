@{
    ViewData["Title"] = "Contact";
}

<h2>Contact us</h2>
<div class="container">
    <div class="col-md-6">
        <form>
            <h3>Contact us</h3>


            Never hesitate to contact us if you wonder anything. 

        </form>
    </div>

    <div class="col-md-6">
        
        <fieldset>
            <legend>Contact us:</legend><br />

            <label for="contactinfo">Name:</label>
            <input type="text" class="form-control" id="contactinfo"><br />

            <label for="contactinfo">E-mail:</label>
            <input type="email" class="form-control" id="contactinfo"><br />

            <label for="contactinfo">Subject:</label><br />
            <select for="contactinfo" name="subject">
                <option for="contactinfo" value="Orderdetails">Order Details</option>
                <option for="contactinfo" value="Work">Work Here</option>
                <option for="contactinfo" value="user">User Details</option>
                <option for="contactinfo" value="other">Other</option>
            </select><br />

            <label for="for=" contactinfo"">Message:</label>
            <textarea class="form-control" rows="5" id="for=" contactinfo""></textarea>
            <br />
            <button id="send">Send!</button>

        </fieldset>
        
    </div>


</div>


