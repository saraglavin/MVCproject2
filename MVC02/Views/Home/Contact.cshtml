@model MVC02.Models.ViewModels.ContactVm
@{
    ViewData["Title"] = "Contact";
}
@{
    string message = ViewData["Message"].ToString();
}

<h2>Contact us</h2>
<div class="container">
    <div class="col-md-6">
        <form>
            <h3>Contact us</h3>


            Never hesitate to contact us if you wonder anything.

        </form>
    </div>

    <div class="col-md-6">

        <form asp-action="ContactDone">
            <h2>Contact us:</h2><br />

            <label for="contactinfo">Name:</label>
            <input type="text" class="form-control" asp-for="Name"><br />

            <label for="contactinfo">E-mail:</label>
            <input type="email" class="form-control" asp-for="Email"><br />

            <label for="contactinfo">Subject:</label><br />
            <select for="contactinfo" asp-for="Subject">
                <option for="contactinfo" value="Orderdetails">Order Details</option>
                <option for="contactinfo" value="Work">Work Here</option>
                <option for="contactinfo" value="user">User Details</option>
                <option for="contactinfo" value="other">Other</option>
            </select><br />

            <label for="for=" contactinfo"">Message:</label>
            <textarea class="form-control" rows="5" asp-for="Message"></textarea>
            <br />
            <button type="submit">Send!</button>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div style="color:darkgreen">@message</div>


        </form>

    </div>


</div>
<script>
    function SendForm() {

        contactConfiraiton = document.getElementById("contactConfiraiton");

        var text = "Thank you for contacting us! We will get back to you shortly."

        contactConfiraiton.innerHTML = `<p style="color: green">${text}</p>`

    }
</script>

